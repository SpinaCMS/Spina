<%= turbo_frame_tag :navigation_item_form do %>
  <%= form_with model: @navigation_item, url: [:admin, @navigation, @navigation_item], data: {turbo_frame: "_top"} do |f| %>
    <%= f.hidden_field :locale, value: @locale, name: :locale %>
    <%= f.hidden_field :parent_id %>
    <%= f.hidden_field :kind, value: "url" %>
    
    <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
      <div class="sm:flex sm:items-start">
        <div class="w-full">
          <div class="flex">
            <h3 class="text-lg leading-6 font-medium text-gray-900 flex" id="modal-headline">
              <%= @navigation_item.persisted? ? t('spina.navigations.edit_menu_item') : t('spina.navigations.add_menu_item') %>
            </h3>

            <div class="ml-auto">
              <%= render Spina::NavigationItems::TranslationsComponent.new(label: @locale.upcase, navigation: @navigation, navigation_item: @navigation_item) %>
            </div>
          </div>
    
          <div class="mt-3">
            <div class="space-y-2">
              <% Mobility.with_locale(@locale) do %>
                <div class="mt-3">
                  <%= render Spina::Forms::TextFieldComponent.new(f, :url_title, size: 'lg', autofocus: true, placeholder: t("spina.navigations.url_title_placeholder") ) %>
                </div>

                <div class="mt-3">
                  <%= render Spina::Forms::TextFieldComponent.new(f, :url, size: 'lg', placeholder: t("spina.navigations.url_placeholder") ) %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="px-4 pb-5 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
      <button type="submit" class="btn btn-primary w-full sm:w-auto sm:ml-2">
        <%= @navigation_item.persisted? ?  (t 'spina.navigations.update_menu_item') : (t 'spina.navigations.add_menu_item') %>
      </button>
    
      <button type="button" class="btn btn-default w-full sm:w-auto mt-2 sm:mt-0" data-action="modal#close">
        <%=t 'spina.ui.cancel' %>
      </button>

      <div class="my-auto text-spina hover:text-spina-dark mr-auto">
        <%= link_to get_form_admin_navigation_navigation_item_path(@navigation, @navigation_item.persisted? ? @navigation_item : :new, :page, parent_id: @navigation_item.parent_id, locale: @locale) do %>
          <%= t("spina.navigations.item_form_page_link") %>
        <% end %>
      </div>
    </div> 
  <% end %>
<% end %>