<%= turbo_frame_tag :page_select_options do %>
  <% @pages.each do |page| %>
    <button type="button" data-action="page-select#select reveal#hide" data-title="<%= page.title %>" data-id="<%= page.id %>" class="block hover:bg-gray-100 w-full text-left px-5 py-1.5 font-medium leading-5 text-gray-700 hover:text-gray-900 text-sm">
      <%= page.title %>
    </button>
  <% end %>
<% end %>