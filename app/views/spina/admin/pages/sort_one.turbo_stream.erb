<% if @top_page && @bottom_page %>
  
  <%= turbo_stream.replace @bottom_page do %>
    <%= render Spina::Pages::PageComponent.new(page: @top_page, draggable: false) %>
  <% end %>
  
  <%= turbo_stream.replace @top_page do %>
    <%= render Spina::Pages::PageComponent.new(page: @bottom_page, draggable: false) %>
  <% end %>
  
<% end %>
