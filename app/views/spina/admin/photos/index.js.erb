// Append new data
$("<%=j render partial: 'spina/admin/photos/photo', collection: @photos %>").appendTo($(".infinite-scroll"));

// Update pagination link
$('.infinite-pagination').html("<%= j link_to_next_page @photos, 'Next', remote: true %>").infiniteScroll();

$('.infinite-scroll .item:not(.ui-draggable)').draggable({revert: 'invalid', disabled: true});
